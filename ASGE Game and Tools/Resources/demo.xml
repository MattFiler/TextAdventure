<?xml version="1.0" encoding="utf-8"?>
<Behavior>
  <Node Class="Brainiac.Design.Nodes.Behavior">
    <Connector Identifier="GenericChildren">
      <Node Class="TextAdventure.Nodes.LevelContainer">
        <Connector Identifier="GenericChildren">
          <Node Class="TextAdventure.Nodes.ZoneDefinition" ZoneName="GLOBAL:1">
            <Connector Identifier="GenericChildren">
              <Node Class="TextAdventure.Nodes.ZoneState" StateName="INITIAL:0">
                <Connector Identifier="GenericChildren">
                  <Node Class="TextAdventure.Nodes.UserInputItem" InputCommand="READ:5" Item="NONE:0">
                    <Connector Identifier="GenericChildren">
                      <Node Class="TextAdventure.Nodes.HasItem" ItemName="NOTE:3">
                        <Connector Identifier="ConditionTrue">
                          <Node Class="TextAdventure.Nodes.TextOutput" ResponseText="The note is from your Dad and reads: Hi Son, home you enjoy your break. You'll need to fire up the generator around back to get power and lights on. Also, found something in the attic for you - it's in your room... enjoy!" />
                        </Connector>
                      </Node>
                    </Connector>
                  </Node>
                </Connector>
              </Node>
            </Connector>
          </Node>
          <Node Class="TextAdventure.Nodes.ZoneDefinition" ZoneName="INSIDE_CAR:2">
            <Connector Identifier="GenericChildren">
              <Node Class="TextAdventure.Nodes.ZoneState" StateName="INITIAL:0">
                <Comment Background="Blue:1" Text="Game load" />
                <Connector Identifier="GenericChildren">
                  <Node Class="TextAdventure.Nodes.ZoneIntro">
                    <Connector Identifier="GenericChildren">
                      <Node Class="TextAdventure.Nodes.TextOutput" ResponseText="You pull up to the driveway of the family holiday home and park the car. It's dark, but it's as idyllic as you remember from all that time ago. You remember being told to look in the glovebox before going in. It's good to be back." />
                    </Connector>
                  </Node>
                  <Node Class="TextAdventure.Nodes.UserInputItem" InputCommand="LOOK_AROUND:1" Item="NONE:0">
                    <Connector Identifier="GenericChildren">
                      <Node Class="TextAdventure.Nodes.TextOutput" ResponseText="It's a nice clean car. Not much to see, but there is a glove box." />
                    </Connector>
                  </Node>
                  <Node Class="TextAdventure.Nodes.UserInputItem" InputCommand="LOOK_AT:0" Item="GLOVEBOX:2">
                    <Connector Identifier="GenericChildren">
                      <Node Class="TextAdventure.Nodes.TextOutput" ResponseText="The glove box is closed but appears to be unlocked." />
                    </Connector>
                  </Node>
                  <Node Class="TextAdventure.Nodes.UserInputItem" InputCommand="OPEN:4" Item="GLOVEBOX:2">
                    <Connector Identifier="GenericChildren">
                      <Node Class="TextAdventure.Nodes.TextOutput" ResponseText="Inside is a key, and a handwritten note from Dad. You take both.">
                        <Connector Identifier="GenericChildren">
                          <Node Class="TextAdventure.Nodes.ItemEvent" PerformAction="ADD_TO_INVENTORY:0">
                            <Connector Identifier="GenericChildren">
                              <Node Class="TextAdventure.Nodes.Item" ItemName="KEY:4" />
                              <Node Class="TextAdventure.Nodes.Item" ItemName="NOTE:3" />
                            </Connector>
                          </Node>
                        </Connector>
                      </Node>
                    </Connector>
                  </Node>
                  <Node Class="TextAdventure.Nodes.UserInputLocation" InputCommand="GET_OUT:6" Location="INSIDE_CAR:2">
                    <Connector Identifier="GenericChildren">
                      <Node Class="TextAdventure.Nodes.TextOutput" ResponseText="You get out the car and stretch your legs.">
                        <Connector Identifier="GenericChildren">
                          <Node Class="TextAdventure.Nodes.MovePlayer" ZoneName="OUTSIDE_CAR:3" />
                        </Connector>
                      </Node>
                    </Connector>
                  </Node>
                </Connector>
              </Node>
            </Connector>
          </Node>
          <Node Class="TextAdventure.Nodes.ZoneDefinition" ZoneName="OUTSIDE_CAR:3">
            <Connector Identifier="GenericChildren">
              <Node Class="TextAdventure.Nodes.ZoneState" StateName="INITIAL:0">
                <Connector Identifier="GenericChildren">
                  <Node Class="TextAdventure.Nodes.ZoneIntro">
                    <Connector Identifier="GenericChildren">
                      <Node Class="TextAdventure.Nodes.TextOutput" ResponseText="The house is grand, sat perfectly amongst the trees. In front of you is the front door, and the yard stretches around the back of the house." />
                    </Connector>
                  </Node>
                  <Node Class="TextAdventure.Nodes.UserInputItem" InputCommand="LOOK_AROUND:1" Item="NONE:0">
                    <Connector Identifier="GenericChildren">
                      <Node Class="TextAdventure.Nodes.TextOutput" ResponseText="The trees stretch up to the night sky. There is the house and the yard." />
                    </Connector>
                  </Node>
                  <Node Class="TextAdventure.Nodes.UserInputLocation" InputCommand="GO_TO:2" Location="YARD:4">
                    <Connector Identifier="GenericChildren">
                      <Node Class="TextAdventure.Nodes.TextOutput" ResponseText="You walk around to the yard.">
                        <Connector Identifier="GenericChildren">
                          <Node Class="TextAdventure.Nodes.MovePlayer" ZoneName="YARD:4" />
                        </Connector>
                      </Node>
                    </Connector>
                  </Node>
                </Connector>
              </Node>
            </Connector>
          </Node>
        </Connector>
      </Node>
    </Connector>
  </Node>
</Behavior>