<?xml version="1.0" encoding="utf-8"?>
<Behavior>
  <Node Class="Brainiac.Design.Nodes.Behavior">
    <Connector Identifier="GenericChildren">
      <Node Class="TextAdventure.Nodes.LevelContainer">
        <Connector Identifier="GenericChildren">
          <Node Class="TextAdventure.Nodes.WorldZone" name="GLOBAL">
            <Connector Identifier="GenericChildren">
              <Node Class="TextAdventure.Nodes.UserInput" command="READ:4" subject="note">
                <Connector Identifier="GenericChildren">
                  <Node Class="TextAdventure.Nodes.HasItem" item="note">
                    <Connector Identifier="ConditionTrue">
                      <Node Class="TextAdventure.Nodes.TextOutput" value="The note is from your Dad and reads: Hi Son, home you enjoy your break. You'll need to fire up the generator around back to get power and lights on. Also, found something in the attic for you - it's in your room... enjoy!" />
                    </Connector>
                  </Node>
                </Connector>
              </Node>
            </Connector>
          </Node>
          <Node Class="TextAdventure.Nodes.WorldZone" name="inside_car">
            <Connector Identifier="GenericChildren">
              <Node Class="TextAdventure.Nodes.ZoneIntro">
                <Connector Identifier="GenericChildren">
                  <Node Class="TextAdventure.Nodes.TextOutput" value="You pull up to the driveway of the family holiday home and park the car. It's dark, but it's as idyllic as you remember from all that time ago. You remember being told to look in the glovebox before going in. It's good to be back." />
                </Connector>
              </Node>
              <Node Class="TextAdventure.Nodes.UserInput" command="LOOK_AT:0" subject="car">
                <Connector Identifier="GenericChildren">
                  <Node Class="TextAdventure.Nodes.TextOutput" value="It's a nice clean car. Not much to see, but there is a glove box." />
                </Connector>
              </Node>
              <Node Class="TextAdventure.Nodes.UserInput" command="LOOK_AT:0" subject="glovebox">
                <Connector Identifier="GenericChildren">
                  <Node Class="TextAdventure.Nodes.TextOutput" value="The glove box is closed but appears to be unlocked." />
                </Connector>
              </Node>
              <Node Class="TextAdventure.Nodes.UserInput" command="OPEN:3" subject="glovebox">
                <Connector Identifier="GenericChildren">
                  <Node Class="TextAdventure.Nodes.TextOutput" value="Inside is a key, and a handwritten note from Dad. You take both.">
                    <Connector Identifier="GenericChildren">
                      <Node Class="TextAdventure.Nodes.ItemEvent" action="ADD_TO_INVENTORY:0">
                        <Connector Identifier="GenericChildren">
                          <Node Class="TextAdventure.Nodes.Item" item="key" />
                          <Node Class="TextAdventure.Nodes.Item" item="note" />
                        </Connector>
                      </Node>
                    </Connector>
                  </Node>
                </Connector>
              </Node>
              <Node Class="TextAdventure.Nodes.UserInput" command="GET_OUT:5" subject="car">
                <Connector Identifier="GenericChildren">
                  <Node Class="TextAdventure.Nodes.MovePlayer" zone="outside_car" />
                </Connector>
              </Node>
            </Connector>
          </Node>
        </Connector>
      </Node>
    </Connector>
  </Node>
</Behavior>